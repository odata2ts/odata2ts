{
  "name": "@odata2ts/workspace-core",
  "version": "1.0.0",
  "private": true,
  "description": "Root project which allows for running single apps or deploy the whole stack.",
  "license": "MIT",
  "repository": "git@github.com:odata2ts/odata2ts.git",
  "scripts": {
    "build": "yarn clean && lerna run build",
    "check-circular-deps": "lerna run check-circular-deps",
    "clean": "rimraf coverage",
    "coverage": "jest --coverage",
    "int-test": "lerna run int-test",
    "postversion": "lerna publish from-git",
    "release": "env-cmd -f .env.local --no-override lerna version",
    "start-cap": "yarn workspace @odata2ts/example-bookshop start",
    "test": "lerna run test -- --no-cache",
    "version": "yarn install && git add yarn.lock"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.0.1",
    "env-cmd": "^10.1.0",
    "husky": "^7.0.4",
    "import-sort-style-module": "^6.0.0",
    "jest": "^27.5.1",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.7",
    "madge": "^5.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "prettier-plugin-package": "^1.3.0",
    "prettier-plugin-properties": "^0.1.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.{xml,js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ]
}
