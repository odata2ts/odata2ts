{
  "name": "@odata2ts/odata2ts",
  "version": "1.0.0",
  "private": true,
  "description": "Root project which allows for running single apps or deploy the whole stack.",
  "license": "MIT",
  "repository": "git@github.com:odata2ts/odata2ts.git",
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "coverage": "jest --coverage",
    "release": "yarn clean && yarn build && lerna publish",
    "test": "jest"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^0.13.1",
    "husky": "^6.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "prettier-plugin-package": "^1.3.0",
    "prettier-plugin-properties": "^0.1.0",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{xml,js,jsx,ts,tsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "workspaces": [
    "packages/*"
  ]
}
